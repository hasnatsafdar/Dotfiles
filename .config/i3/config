bindsym $mod+e exec --no-startup-id alacritty -e yazi
bindsym $mod+Shift+e exec --no-startup-id alacritty -e sudo yazi

# Brightness (brightnessctl)
bindsym XF86MonBrightnessUp exec --no-startup-id "brightnessctl set +5%; notify-send 'brightness up'"
bindsym XF86MonBrightnessDown exec --no-startup-id "brightnessctl set 5%-; notify-send 'brightness down'"

