# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Hide borders
default_border pixel 3
default_floating_border pixel 3
hide_edge_borders smart

# Browser
bindsym $mod+Shift+b exec --no-startup-id qutebrowser
bindsym $mod+b exec --no-startup-id flatpak run com.google.Chrome

# Docs & notes stuff
bindsym $mod+n exec obsidian

# Brightness (brightnessctl)
bindsym XF86MonBrightnessUp exec --no-startup-id "brightnessctl set +5%; notify-send 'brightness up'"
bindsym XF86MonBrightnessDown exec --no-startup-id "brightnessctl set 5%-; notify-send 'brightness down'"

