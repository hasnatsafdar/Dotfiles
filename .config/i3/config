# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Hide borders
default_border pixel 0
default_floating_border pixel 0
hide_edge_borders smart

# Browser
bindsym $mod+b exec --no-startup-id ~/Downloads/zen/./zen 
bindsym $mod+Shift+b exec --no-startup-id librewolf
bindsym $mod+Shift+Ctrl+b exec --no-startup-id flatpak run com.google.Chrome

# Docs & notes stuff
