# sets the window key to the super/mod key
set $mod Mod4

# Font
font pango:JetBrains Mono Nerd Font 8, Ionicons 9, Poppins Regular 9

# Autostart
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-applet

# TODO Study all this stuff up here
exec --no-startup-id setxkbmap -option caps:escape
# Bar
# exec_always exec --no-startup-id ~/.config/polybar/launch.sh
