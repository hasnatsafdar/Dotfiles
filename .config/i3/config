# sets the window key to the super/mod key
set $mod Mod4

# Font
font pango:JetBrains Mono Nerd Font 8, Ionicons 9, Poppins Regular 9

# Autostart
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork 
# TODO This really needs some customization
exec --no-startup-id nm-applet
exec --no-startup-id xset s off -dpms

# Start Picom as a background daemon with its config file
exec_always --no-startup-id picom -b
